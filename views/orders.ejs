<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include("partials/navbar") %>
    <div class="container">
      <h1>Orders Page</h1>
      <% orders.forEach(order => { %>

      <div class="card mb-5">
        <div class="card-header">
          <h3>order id: <%= order._id %></h3>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>Product Name</th>
              <th>Price</th>
              <th>Quantity</th>
            </tr>
          </thead>
          <tbody>
            <% order.items.forEach(item => { %>
            <tr>
              <td>
                <img src="<%= item.product.productImage %> " width="80" />
              </td>
              <td><%= item.product.productName %></td>
              <td><%= item.product.price %></td>
              <td><%= item.quantity %></td>
            </tr>
            <% }) %>
          </tbody>
          <tfoot>
            <% let total = 0; order.items.forEach((item) => { total +=
            item.product.price * item.quantity }); %>
            <tr>
              <td colspan="2"></td>
              <td>TOTAL:</td>
              <td><%= total %>  TL</td>
            </tr>
          </tfoot>
        </table>
      </div>
      <% }) %>
    </div>
  </body>
</html>
